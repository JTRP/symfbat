{% extends 'base.html.twig' %}


{% block title %}Liste des publications{% endblock %}


{% block body %}

    <div class="container-fluid">

        <div class="row">
            <h1 class="col-12 text-center my-5">Publications du Blog de Batman</h1>
        </div>

        <div class="row">

            <div class="col-12 col-md-8 mx-auto">

                {# Affichage du nombre total d'article (attribut apporté par KNP P aginator) #}
                <div class="row">
                    <p class="col-12 text-center">Nombre total d'articles : {{ articles.getTotalItemCount() }}</p>
                </div>

                {# Afficage du menu de navigation, seulemeent s'il y a des carticles  #}

                {% if articles is not empty %}

                    <div class="row">

                        <div class="col-12 my-3 text-center">

                            <div class="d-inline-block">

                                {{ knp_pagination_render( articles ) }}

                            </div>

                        </div>

                    </div>

                {% endif %}

                {% for article in articles %}

                    {# Un article #}
                    <div class="row">

                        <div class="col-12">

                            <div class="card my-3 bg-black">

                                <div class="card-header">
                                    <a href="{{ path('blog_publication_view', {'id': article.id, 'slug': article.slug}) }}" class="text-decoration-none">
                                        <i class="far fa-newspaper me-2"></i>
                                        {{ article.title }}
                                    </a>
                                </div>

                                <div class="card-body">
                                    {{ article.content|striptags|excerpt(70) }}
                                    <div class="mb-2">

                                        <a class="text-decoration-none" href="{{ path('blog_publication_view', {'id': article.id, 'slug': article.slug}) }}">Lire la suite</a>

                                    </div>

                                    <footer class="blockquote-footer my-2">Publié le <strong>{{ article.publicationDate|date('d/m/Y à H\\hm') }}</strong> par <strong>{{ article.author.pseudonym }}</strong></footer>

                                    {# Si l'utilisateur a le rôle admin #}
                                    {% if is_granted('ROLE_ADMIN') %}

                                        <div class="mt-3">

                                            <a onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet article')" href="{{ path('blog_publicaton_delete', {'id': article.id, 'token': csrf_token('blog_publication_delete_' ~ article.id)}) }}" class="text-decoration-none text-danger">
                                                <i class="fa fa-trash-can"></i>
                                                Supprimer
                                            </a>

                                        </div>

                                    {% endif %}



                                </div>

                            </div>

                        </div>

                    </div>

                {% else %}

                    <div class="row">
                        <p class="col-12 text-center alert alert-warning"> Aucune publication à afficher </p>
                    </div>

                {% endfor %}

                {% if articles is not empty %}

                    <div class="row">

                        <div class="col-12 my-3 text-center">

                            <div class="d-inline-block">

                                {{ knp_pagination_render( articles ) }}

                            </div>

                        </div>

                    </div>

                {% endif %}


            </div>

        </div>

    </div>

{% endblock %}


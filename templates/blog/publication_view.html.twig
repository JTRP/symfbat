{% extends 'base.html.twig' %}

{% block css %}<link rel="stylesheet" href="{{ asset('css/styles.css') }}">{% endblock %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}

    <div class="container-fluid">

        <div class="row">
            <h1 class="col-12 text-center my-5">{{ article.title }}</h1>
        </div>

        {# Lien pour revenir à la liste des articles #}
        <div class="row">
            <div class="text-center col-12 mb-3">
                <a href="{{ path('blog_publication_list') }}" class="text-decoration-none">Retour liste des articles</a>
            </div>
        </div>

        {# Affichage de l'article #}
        <div class="row">

            <div class="col-12 col-md-8 mx-auto">

                <article class="card bg-black my-2">

                    <div class="card-body">

                        <footer class="blockquote-footer mt-0 mb-4">
                            Publié le <span class="text-light">{{ article.publicationDate|date('d/m/y H\\hi') }}</span> par <span class="text-light">{{ article.author.pseudonym }}</span>
                        </footer>

                        <div class="mb-2">
                            {{ article.content|purify }}
                        </div>

                        {# Si l'utilisateur a le rôle admin #}
                        {% if is_granted('ROLE_ADMIN') %}

                            <div class="mt-3">

                                <a onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet article')" href="{{ path('blog_publicaton_delete', {'id': article.id, 'token': csrf_token('blog_publication_delete_' ~ article.id)}) }}" class="text-decoration-none text-danger">
                                    <i class="fa fa-trash-can"></i>
                                    Supprimer
                                </a>

                            </div>

                        {% endif %}

                    </div>

                </article>

                {# Affichage des commentaires #}
                <div class="row">

                    <article class="card bg-black my-2">

                        <h2 class="text-center my-4">Commentaires : {{ article.comments|length }}</h2>

                    {% for comment in article.comments %}

                        <div class="card-body d-flex bg-light my-3" id="card-comment">

                            <div class="me-5">
                                <img src="{{ asset( ( comment.author.photo is null) ? 'images/profil_default.jpg' : 'images/profils/' ~ comment.author.photo )|imagine_filter('profil_comments') }}" alt="">
                            </div>

                            <div class="w-100">
                                <footer class="blockquote-footer mt-0 mb-4">
                                    Ajouté par <span class="text-light">{{ comment.author.pseudonym }}</span> Le <span class="text-light">{{ comment.publicationDate|date('d/m/Y H\\hi') }}</span>
                                </footer>

                                <div class="m-5">
                                    {{ comment.content|purify }}
                                </div>

                                {# Si l'utilisateur a le rôle admin #}
                                {% if is_granted('ROLE_ADMIN') %}

                                    <div class="mt-3 d-flex justify-content-end">

                                        <a onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet article')" href="{{ path('blog_comment_delete', {'id': comment.id, 'token': csrf_token('blog_comment_delete_' ~ comment.id)}) }}" class="text-decoration-none text-danger d-block">
                                            <i class="fa fa-trash-can"></i>
                                            Supprimer
                                        </a>

                                    </div>

                                {% endif %}
                            </div>

                        </div>

                    {% else %}


                        <div class="alert alert-warning">

                            <p class="col-12 col-md-8"> Pas commentaire pour le moment </p>

                        </div>

                    {% endfor %}

                        {% if is_granted('ROLE_USER') %}

                            {{ form( form ) }}

                        {% else %}
                            <p>Pour envoyer un commentaire veuillez vous connecter ici : <a href="{{ path('app_login') }}">connexion</a></p>
                        {% endif %}

                </article>


            </div>

        </div>

    </div>

{% endblock %}


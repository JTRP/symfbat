{% extends 'base.html.twig' %}

{% block title %}Acceuil{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row">

            {# Dinamiser le nom du site #}
            <h1 class="col-12 text-center my-5"> {{ site_name }} </h1>

        </div>

        <div class="row">

            <h2 class="text-center col-12 my-4">Lorem ipsum dolor sit amet,</h2>

            <p class="col-12 col-md-10 mx-auto text-center">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aliquid animi cumque, delectus distinctio ex harum id impedit minima, necessitatibus nihil saepe sapiente sequi soluta suscipit voluptates? Assumenda, cumque dolorem eius eveniet hic illum iste libero molestiae nihil pariatur placeat quae sit. Ad dignissimos doloribus iusto labore maiores molestias, numquam quasi!</p>

        </div>

        {# Affichage du bandeau avec l'image fixe #}
        <div class="row my-5 bataman-cover"></div>

        {# Affichage des dernier articles publié #}
        <div class="row">

            <div class="col-12 col-md-8 mx-auto">

                <div class="row">
                    <h2 class="col-12 text-center">Dernier publication</h2>
                </div>

                {% for article in articles %}

                    {# Un article #}
                    <div class="row">

                        <div class="col-12">

                            <div class="card my-3 bg-black">

                                <div class="card-header">
                                    <a href="{{ path('blog_publication_view', {'id': article.id, 'slug': article.slug}) }}" class="text-decoration-none">
                                        <i class="far fa-newspaper me-2"></i>
                                        {{ article.title }}
                                    </a>
                                </div>

                                <div class="card-body">
                                    {{ article.content|excerpt(50) }}
                                    <div class="mb-2">

                                        <a class="text-decoration-none" href="{{ path('blog_publication_view', {'id': article.id, 'slug': article.slug}) }}">Lire la suite</a>

                                    </div>

                                    <footer class="blockquote-footer my-2">Publié le <strong>{{ article.publicationDate|date('d/m/Y à H\\hi') }}</strong> par <strong>{{ article.author.pseudonym }}</strong></footer>

                                </div>

                            </div>

                        </div>

                    </div>

                {% else %}

                    <div class="row">
                        <p class="col-12 text-center alert alert-warning"> Aucune publication à afficher </p>
                    </div>

                {% endfor %}


            </div>

        </div>

        <div class="row mb-5">

            <h2 class="text-center col-12 my-">Lorem ipsum dolor sit amet,</h2>

            <p class="col-12 col-md-10 mx-auto text-center mb-5">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aliquid animi cumque, delectus distinctio ex harum id impedit minima, necessitatibus nihil saepe sapiente sequi soluta suscipit voluptates? Assumenda, cumque dolorem eius eveniet hic illum iste libero molestiae nihil pariatur placeat quae sit. Ad dignissimos doloribus iusto labore maiores molestias, numquam quasi!</p>

        </div>

    </div>


{% endblock %}

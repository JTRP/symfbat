{% extends 'base.html.twig' %}

{% block title %}Créer un compte{% endblock %}


{% block css %}
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
{% endblock %}


{% block body %}

    <div class="container-fluid">

        <div class="row">
            <h1 class="col-12 text-center my-5"> Le Blog de Batman </h1>
        </div>

        <div class="row">

            <div class="col-12 col-md-8 mx-auto">

                {# Ouverture du formulaire #}
                {{ form_start( registrationForm ) }}

                {# Afficage des erreurs générale du formulaire #}
                <div class="mb-3">
                    {{ form_errors( registrationForm ) }}
                </div>


                {# Afficage des champs #}
                {{ form_row( registrationForm.email ) }}
                {{ form_row( registrationForm.plainPassword ) }}
                {{ form_row( registrationForm.pseudonym ) }}

                {# Affichage de Recaptcha Google #}
                <div class="mb-3">
                    <div class="mb-2">Captcha de sécuriteé</div>
                    <div class="g-recaptcha" data-sitekey="{{ google_recaptcha_site_key }}"></div>
                </div>

                {{ form_row( registrationForm.save ) }}

                {{ form_end( registrationForm ) }}



            </div>


        </div>


    </div>

{% endblock %}
